@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <title>Book library</title>
    <style>
        body {
            background: #DCDCDC; /* Цвет фона */
            color: #000; /* Цвет текста */
        }
    </style>
</head>
<body>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <h1>Users</h1>
    <table class="table">
        <tr>
            <th><a href="@Url.Action("Create", "User")" role="button" class="btn btn-primary btn-lg">Add user</a></th>
        </tr>
    </table>



    <table class="table table-bordered table-striped">
        <tr>
            <th>№</th>
            <th>First name</th>
            <th>Second name</th>
            <th>E-Mail</th>
        </tr>

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>

                <td><a href="@Url.Action("Edit", "User", new { idUser = Model.Rows[i][0] })" role="button" class="btn btn-outline-primary btn-block">Edit</a></td>
                <td><a href="@Url.Action("ReceiveAbsentBooks", "User", new { idUser = Model.Rows[i][0] })" role="button" class="btn btn-outline-primary btn-block">Receive a book</a></td>
                <td><a href="@Url.Action("GetUserBooks", "User", new { idUser = Model.Rows[i][0] })" role="button" class="btn btn-outline-primary btn-block">Return a book</a></td>
                <td><a href="@Url.Action("Index", "History", new { idUser = Model.Rows[i][0] })" role="button" class="btn btn-outline-primary btn-block">History</a></td>             
            </tr>
        }
        <tr>
            <td>
                @Html.ActionLink("Back to Books", "Index", "Book")
            </td>
        </tr>
    </table>
</body>
</html>
